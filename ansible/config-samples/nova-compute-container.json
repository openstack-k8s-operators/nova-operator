{
    "image": "quay.io/tripleomastercentos9/openstack-nova-compute:current-tripleo",
    "privileged": true,
    "user": "nova",
    "restart": "always",
    "command": "kolla_start",
    "environment": {
        "KOLLA_CONFIG_STRATEGY":"COPY_ALWAYS",
        "KOLLA_CONFIG_FILE":"/var/lib/openstack/config/nova-compute.json"
    },
    "volumes": [
        "/etc/nova:/var/lib/openstack/config/:ro",
        "/etc/localtime:/etc/localtime:ro",
        "/lib/modules:/lib/modules:ro",
        "/dev:/dev",
        "/run/openvswitch:/run/openvswitch",
        "/var/log/containers/nova:/var/log/containers/nova",
        "/var/lib/libvirt:/var/lib/libvirt",
        "/var/lib/nova/:/var/lib/nova/"
    ]
  }
